{
    "version": "2.0.0",
    "tasks": [
        { "label": "Install Dependencies", "type": "shell", "command": "pip install -r requirements.txt", "group": "build" },
        { "label": "Run Flask App", "type": "shell", "command": "python src/main.py", "group": "build" },
        { "label": "Build Docker Image", "type": "shell", "command": "docker build -t main-street-migrator ."},
        { "label": "Docker Compose Up", "type": "shell", "command": "docker-compose up --build" },
        { "label": "Run Tests", "type": "shell", "command": "pytest -q" }
    ]
}
